<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ScanHub" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_6</item>
        <item name="colorPrimaryVariant">@color/color_6</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_3</item>
        <item name="colorSecondaryVariant">@color/color_6</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!--navigation menu font family-->
    <style name="NavigationMenuViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>


    <!-- ProgressBar Color. -->
    <style name="ProgressBar">
        <item name="colorSecondary">@color/black</item>
    </style>

    <style name="fontfamily" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="fontfamilys" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="Circular">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.ScanHub" parent="Base.Theme.ScanHub" />
</resources>